#login.container
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          %span.logo
            = image_tag 'logo.png'
          = fa_icon :lock, class: 'pull-right'
        .panel-body
          .logo.col-sm-offset-3.col-sm-9.col-md-offset-3.col-md-9
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'form-horizontal' } }) do |f|
            .form-group
              %label.col-sm-3.control-label{for: "inputEmail3"}
                Email
              .col-sm-9
                = f.input_field :email, autofocus: true, "data-msg-required" => "Please enter your email.", "data-rule-required" => "true", placeholder: "Email", type: "email", class: 'form-control', id: 'inputEmail3'
            .form-group
              %label.col-sm-3.control-label{for: "inputPassword3"}
                Password
              .col-sm-9
                = f.input_field :password, "data-msg-required" => "Please enter your password.", "data-rule-required" => "true", placeholder: "Password", type: "password", id: 'inputPassword3', class: 'form-control'
            .form-group
              .col-sm-offset-3.col-sm-9
                .checkbox
                  %label
                    %input{name: "remember_me", type: "checkbox"}/
                    Remember me
            .form-group.last
              .col-sm-offset-3.col-sm-9
                %button.btn.btn-primary.btn-sm{type: "submit"}
                  Sign in
                -# %button.btn.btn-default.btn-sm{type: "reset"}
                -#   Reset
        .panel-footer
          Forgot your password?
          = link_to "Click Here.", new_password_path(resource_name)
